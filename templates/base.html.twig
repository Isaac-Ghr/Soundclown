<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}GM{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom" style="border-color: grey;">
            <div class="container">
                <a class="navbar-brand" href="{{path('app_accueil')}}">Soundclown</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Artistes
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="{{path('app_artistes')}}">Liste</a></li>
                                <li><a class="dropdown-item" href="{{path('app_admin_artistes')}}">Gérer</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Nationalités
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="{{path('app_nationalite_liste')}}">Liste</a></li>
                                <li><a class="dropdown-item" href="{{path('app_admin_nationalite_liste')}}">Gérer</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('app_albums')}}">Albums</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('app_labels')}}">Labels</a>
                        </li>            
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container">
        {% for label, messages in app.flashes %}
            <div class="alert alert-{{label}} mt-2">
            {% for message in messages %}
            <p> {{message}} </p>
            {% endfor %}
            </div>
        {% endfor %}
            {% block body %}{% endblock %}
        </div>
    </body>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    {% block javascripts %}{% endblock %}
</html>
