<div id ="suppr-modal" class="modal fade" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
        <a id="confirm-btn" type="button" class="btn btn-primary"></a>
      </div>
    </div>
  </div>
</div>

<script>
    $("button[data-lien]").click(function(){
        // fetch elem
        let lien=$(this).attr("data-lien");
        let titre=$(this).attr("data-titre");
        let message=$(this).attr("data-message");
        let libelleConf=$(this).attr("data-libelleConf");

        $("#confirm-btn").attr("href", lien);
        $(".modal-title").text(titre);
        $(".modal-body").text(message);
        $("#confirm-btn").text(libelleConf);
    })
</script>