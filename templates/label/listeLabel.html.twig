{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Liste des labels{% endblock %}

{% block body %}
<h1>Liste des Labels</h1>
<div class="gap-3" style="display: grid; grid-template-columns: repeat(4, 1fr);">
    {% for label in lesLabels %}
        {% set nbAlbum = label.albums|length %}
        {% set status = label.type == "Majeur" ? "warning" : "success" %}

        <div class="card" style="">
            <img src=" {{ label.logo }}" class="card-img-top" alt="Logo du label">
            <div class="card-body">
                <h5 class="card-title"><a href="{{ path('app_label', {'id': label.id}) }}">{{label.nom}}</a></h5>
                <h6 class="text-secondary">Depuis {{ label.annee }}</h6>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">{{ nbAlbum }} albums sign√©s</li>
                <li class="list-group-item">
                    Status : {{label.type}}
                </li>
            </ul>
        </div>
    {% endfor %}
</div>
{% endblock %}
